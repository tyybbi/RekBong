<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editDlgLLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/addPlateTitleTv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/edit_dlg_tv_title"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/editDlgHorLLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editPlateLetterPartEt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="right"
            android:inputType="textCapCharacters"
            android:maxLength="3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addPlateDashTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_dlg_tv_dash"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editPlateNumberPartEt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="left"
            android:inputType="number|none"
            android:maxLength="3"
            android:digits="0123456789"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editPlateHorLLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editPlateDateEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="number|none"
            android:digits="0123456789.: "
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
